container(w = 1000px)
    display block
    max-width w
    margin 0 auto
    position relative

font(face = Regular)
    if face == Regular
        font-family "Graphik-Regular", sans-serif
        font-weight 400
    if face == Medium
        font-family "Graphik-Medium", sans-serif
        font-weight 500
    if face == Glasten
        font-family "Glasten", sans-serif
