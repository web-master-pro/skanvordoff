.footer
    width 100%
    background-color #2f2f44

    &__in
        container(1010px)
        padding 13px 15px 10px
        display flex
        flex-flow row nowrap
        justify-content space-between
        +below(768px)
            padding 13px 10px 12px
        +below(480px)
            flex-direction column
            align-items center

    &__menu
        margin 0 10px 0 22px
        flex 0 0 auto
        +below(768px)
            margin-left 10px
        +below(480px)
            margin 0 0 5px

    &__copyright
        color white
        font()
        font-size 14px
        line-height 1.5
        margin 0 2px
        flex 0 0 auto
        +below(768px)
            margin 0 10px 0 0
        +below(480px)
            margin 0
