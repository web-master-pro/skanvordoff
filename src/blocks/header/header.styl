.title
    position relative
    text-align center
    &::before
        content ""
        display block
        width 100%
        height 2px
        background-color #2f2f44
        position absolute
        top 15px
        left 0
        right 0
    span
        display inline-block
        height: 32px;
        background: #2f2f44;
        position: relative;
        color #fff
        line-height 1
        text-transform uppercase
        padding 5px 7px 0

        &:before
            content: "";
            position: absolute;
            top: 0;
            left: -10px;
            width: 0;
            height: 0;
            border-top: 16px solid transparent;
            border-bottom: 16px solid transparent;
            border-right: 10px solid #2f2f44;

        &:after
            content: "";
            position: absolute;
            top: 0;
            right: -10px;
            width: 0;
            height: 0;
            border-top: 16px solid transparent;
            border-bottom: 16px solid transparent;
            border-left: 10px solid #2f2f44;
