.bottom-menu
    &__list
        list-style none
        display block
        padding 0
        margin 0

    &__item
        display inline
        color white
        font()
        font-size 14px
        line-height 1.5
        &::after
            content "|"
            margin 0 18px
        &:last-child
            &::after
                content ""
                display none

    &__link
        color white
        text-decoration none
        &:hover
            color @color
            text-decoration underline
