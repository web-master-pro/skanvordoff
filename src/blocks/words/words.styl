.words
    display block
    width 100%
    background-color white
    border 1px solid #ebebeb
    border-radius 3px
    box-shadow 0 0 18px rgba(0, 0, 0, 0.08)
    padding 15px 7px 15px 15px

    &__list
        list-style none
        display block
        width 100%
        padding 0
        margin 0

    &__item
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
        width 100%
        padding 5px 0
        margin 0

    &__caption
        flex 1 1 auto
        display inline-block
        font()
        font-size 16px
        line-height 22px
        color #3d3d3d
        margin 0 5px 0 0
        a
            color #3d3d3d
            text-decoration none
            &:hover
                color @color
                text-decoration underline

    &__results
        flex 0 0 auto
        display inline-block
        font(Medium)
        font-size 16px
        line-height 1
        color white
        background-color #3d3d3d
        padding 10px 19px
        border-radius 18px
        margin 0
