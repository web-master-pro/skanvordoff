.sidebar
    display block
    width 100%

    &__section
        width 100%
        padding 10px
        background-color white
        border 1px solid #ebebeb
        border-radius 2px
        box-shadow 0 0 18px rgba(0, 0, 0, 0.08)
        margin 0 0 10px
        +below(1000px)
            padding 20px
            margin 0 0 15px

    &__banner
        display block
        width 100%
        max-width 220px
        height auto
        margin auto

